{
    "manifest_version": 3,
    "name": "Grey Mind",
    "version": "1.0",
    "description": "Turn your browser monochrome to stay productive.",
    "permissions": ["activeTab", "scripting"],
    "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/eye-icon.svg",
      "48": "icons/eye-icon.svg",
      "128": "icons/eye-icon.svg"
    }
  },
  "icons": {
    "16": "icons/eye-icon.svg",
    "48": "icons/eye-icon.svg",
    "128": "icons/eye-icon.svg"
  }
}